<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lycan.owrecall.LoginActivity"
    tools:showIn="@layout/activity_login">

    <Button
        android:text="Log In via Battle.net"
        android:layout_width="222dp"
        android:layout_height="80dp"
        android:id="@+id/btn_login"
        android:textColor="#FFF"
        android:background="@color/battlenetBlue"
        app:layout_constraintLeft_toLeftOf="@+id/content_login"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/content_login"
        android:layout_marginTop="312dp"
        app:layout_constraintRight_toRightOf="@+id/content_login"
        android:layout_marginEnd="16dp" />

    <TextView
        android:text="You have to Sign In using your Battle.net account"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/textView3"
        app:layout_constraintLeft_toLeftOf="@+id/content_login"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/content_login"
        android:layout_marginTop="184dp"
        app:layout_constraintRight_toRightOf="@+id/content_login"
        android:layout_marginEnd="16dp" />

    <Spinner
        android:layout_width="222dp"
        android:layout_height="41dp"
        android:id="@+id/regionSelect"
        android:spinnerMode="dialog"
        app:layout_constraintLeft_toLeftOf="@+id/content_login"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintRight_toRightOf="@+id/content_login"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_login"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.86" />
</android.support.constraint.ConstraintLayout>
